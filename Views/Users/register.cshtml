@model UserViewModel
@{
	ViewData["Title"] = "Crear cuenta";
}

<div class="card o-hidden border-0 shadow-lg m-5 custom-card">
	<div class="card-body p-0">
		<!-- Nested Row within Card Body -->
		<div class="row">
			<div class="col-lg-12">
				<div class="p-5">
					<div class="text-center">
						<h1 class="h4 text-gray-900 mb-4">Crear Cuenta</h1>
					</div>
					<form class="user" asp-action="Register">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group row mb-3">
							<div class="col-sm-6 mb-3 mb-sm-0">
								<input asp-for="Name" type="text" class="form-control form-control-user" id="exampleFirstName"
									   placeholder="Nombre">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="col-sm-6">
								<input asp-for="LastName" type="text" class="form-control form-control-user" id="exampleLastName"
									   placeholder="Apellido">
								<span asp-validation-for="LastName" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group mb-3">
							<input asp-for="Email" class="form-control form-control-user" id="exampleInputEmail"
								   placeholder="Correo Electronico">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group row mb-3">
							<div class="col-sm-6 mb-3 mb-sm-0">
								<input asp-for="Password" type="password" class="form-control form-control-user"
									   id="exampleInputPassword" placeholder="Contraseña">
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="col-sm-6 mb-3">
								<input asp-for="CPassword" type="password" class="form-control form-control-user"
									   id="exampleRepeatPassword" placeholder="Repetir Contraseña">
							</div>
						</div>
						<button type="submit" class="btn btn-warning text-light fw-bold btn-user btn-block">Registrarte</button>
					</form>
					<hr>
					@*<div class="text-center">
						<a class="small" href="forgot-password.html">Forgot Password?</a>
					</div>*@
					<div class="text-center">
						<a class="fw-bold text-warning" asp-action="Login">Ya tienes cuenta? Entrar!</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
