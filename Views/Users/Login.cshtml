@model UserLoginViewModel
@{
	ViewData["Title"] = "Login";
}

<!-- Outer Row -->
<div class="row justify-content-center">

	<div class="col-xl-10 col-lg-12 col-md-9">

		<div class="card o-hidden border-0 shadow-lg my-5 custom-card">
			<div class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-12">
						<div class="p-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
							</div>
							<form class="user" asp-action="Login">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group mb-3">
									<label class="form-label">Correo Electronico:</label>
									<input asp-for="Email" type="email" class="form-control form-control-user"
										   id="exampleInputEmail" aria-describedby="emailHelp"
										   placeholder="Enter Email Address...">

									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
								<div class="form-group mb-3">
									<label class="form-label">Contraseña</label>
									<input asp-for="Password" type="password" class="form-control form-control-user"
										   id="exampleInputPassword" placeholder="Password">

									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
								<button type="submit" class="btn btn-warning text-light fw-bold btn-user btn-block">Login</button>
							</form>
							<hr>
							@*<div class="text-center">
								<a class="small" href="forgot-password.html">Forgot Password?</a>
							</div>*@
							<div class="text-center">
								Para crear una cuenta consulte con el distribuidor.
								@*<a asp-action="Register">Crear cuenta</a>*@
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
